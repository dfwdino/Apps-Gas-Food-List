<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    <style>
        a.headerItems {
            display: inline-block;
            width: 50px;
            padding-bottom: 2px;
        }
        a {
            display: inline-block;
            width: 125px;
            padding-bottom: 2px;
        }
        #HeaderLablel {
            display: inline-block;
            width: 46px;
            padding-bottom: 6px;
        }
    </style>

</head>
<body>
    <span>
        <label id="HeaderLablel">Items: </label>@Html.ActionLink("Need", "Index", "Home", null, new { @class = "headerItems" })
        @Html.ActionLink("All", "Index", "Home", new { showAll = true }, new { @class = "headerItems" })
        @Html.ActionLink("Add", "AddItem", "Items", null, new { @class = "headerItems" })
    </span>
    <br />
    <span>
        <label id="HeaderLablel">Store: </label>
        @Html.ActionLink("Add", "AddStore", "Stores", null, new { @class = "headerItems" })
        @Html.ActionLink("All", "Stores", "Stores", null, new { @class = "headerItems" })
    </span>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)



</body>
</html>
