<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    <style>
        a {
            display: inline-block;
            width: 40px;
            padding-bottom: 2px;
        }
        #HeaderLablel {
            width: 40px;
        }
    </style>

</head>
<body>
    <span><label id="HeaderLablel">Items: </label>@Html.ActionLink("Need", "Index", "Home")
    @Html.ActionLink("All", "Index", "Home", new { showAll = true }, null)
    @Html.ActionLink("Add", "AddItem", "Home")</span>
    <br/>
    <span><label id="HeaderLablel">Store: </label>@Html.ActionLink("Add", "AddStore", "Home")  @Html.ActionLink("All", "ListStores", "Home")</span>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)



</body>
</html>
