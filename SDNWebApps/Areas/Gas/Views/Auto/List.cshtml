@model SDNWebApps.Areas.Gas.Models.Auto.ListViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Auto for @Model.Person.PersonName</h2>

<table id="AutoList" style="border-style:none">
    
    @{foreach (var item in Model.Auto)
      {
          <tr>
              <td style="border-style: solid; border-width: 1px">@Html.Label(item.AutoName)</td>
              <td style="border-style: solid; border-width: 1px">@Html.ActionLink("Add","Add","Miles",new {autoID = item.ID},null) </td>
              <td style="border-style: solid; border-width: 1px">@Html.ActionLink("View Miles","List","Miles", new {autoID = item.ID},null)</td>
          </tr>
      
      }
    }

</table>

@Html.ActionLink("Add Auto","Add","Auto",new {personID = Model.Person.ID},null)